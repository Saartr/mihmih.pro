mixin experience-block(data, title, position, text, list)
  li.experience__item
    .experience__data
      -if(data)
        .experience__month!=data[0]
        .experience__year!=data[1]
      -else
        .experience__now сейчас
    h3.experience__title!=title
    h4.experience__position!=position
    .experience__body
      .experience__text!=text
      ul
        each item in list
          li!=item
