@import '../_const';

.experience
  padding 2rem 0

  .experience__header

    .main__number
      display: none

  @media tablet
    padding: 3rem 0

.experience__list
  padding 0
  list-style none
  position: relative

  @media laptop
    padding-left: 5rem

    &:before
      content: ''
      position: absolute
      width: 4px
      left: 0
      bottom: 0
      height: calc(100% - 1rem)
      background: #DEDEDE

.experience__item
  padding 0 0 2.5rem 0
  display: flex
  flex-direction: column
  position: relative

  @media tablet
    padding: 0 0 4rem 0

  &:last-of-type
    padding: 0

  
.experience__body

  ul, li
    list-style-type: square
    padding: 0
    margin: 0

  li
    font-size: 16px
    line-height: 28px
    margin-left: 1rem

  @media tablet
    display flex

    ul
      width: 50%
      padding-left: 1rem

  @media laptop

    ul
      padding-left: 4rem

.experience__text
  color: dark
  margin-bottom: 1.5rem
  line-height: 28px
  font-size: 16px

  @media tablet 
    width: 50%
    padding-right: 1rem
    margin-bottom: 0

  @media laptop
    padding-right: 4rem

.experience__title
  font-size 24px
  font-family: 'GothamPro';
  margin 0 0 0.5rem

  @media tablet
    font-size: 32px
    margin: 0 0 1rem

.experience__position
  font-size 18px
  font-weight normal
  margin 0 0 1rem

  @media tablet 
    font-size 24px

.experience__data
  position: absolute
  left: -4.25rem
  top: 0
  font-family: 'GothamPro', sans-serif

  .experience__month
    font-size: 11px
    color: #DEDEDE
    line-height: 17px

  .experience__year
    font-size: 12px
    color: #9B9B9B
    line-height: 17px

    &:before
      content: ''
      position: absolute
      left: -12px
      top: 15px
      width: 8px
      height: 4px
      background: #DEDEDE

  .experience__now
    font-size: 12px
    color dark
    margin-top: 10px

    &:before
      content: ''
      position: absolute
      top: 1rem
      left: -12px
      width: 8px
      height: 4px
      background: dark

  @media max-laptop
    display none

.experience__top
  display: flex
  flex-direction: column


  @media tablet
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-between

    .experience__title
      order: 1

    .experience__position
      order: 3
      width: 100%

    .experience__link
      order: 2


.experience__link
  display inline-block
  text-decoration none
  font-size 18px
  font-weight normal
  color #9B9B9B
  margin-bottom: 1rem

  @media tablet
    margin-bottom: 0


@media laptop
  .experience

    .experience__header
      display: inline-flex
      position: relative
      margin-bottom: 5rem

      .title
        margin: 0
        padding-left: 5rem

      .main__number
        display: block !important
        position: absolute
        left: 0
        top: 0.5rem