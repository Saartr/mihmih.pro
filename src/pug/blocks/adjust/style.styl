@import '../_const';
@import '_fonts';
@import '_normalize';

html 
  height: 100%;
  width: 100%;
  font-family: 'DINPro';
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;


body 
  margin: 0;
  padding: 0;
  font-family: 'DINPro', sans-serif;
  font-size: 16px;
  font-weight: normal;
  background: #fff;
  color #2C3134
  overflow-x: hidden


.container 
  width: 100%
  max-width: 1148px;
  margin: auto;
  padding: 0 1.5rem;
  box-sizing: border-box;
  position: relative

  @media desktop
    max-width: 1148px;

.title
  font-size: 32px;
  margin 0
  font-family: 'GothamPro';

  @media tablet 
    font-size: 42px;

.button
  color currentColor
  display inline-block
  height 48px
  line-height 40px
  text-align center
  padding 0 0.5rem
  box-sizing border-box
  font-family: 'GothamPro';
  font-weight bold
  text-transform uppercase
  border  4px solid  currentColor
  text-decoration none