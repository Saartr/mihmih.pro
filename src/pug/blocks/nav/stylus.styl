@import '../_const';

.language
  background: white
  font-family: 'GothamPro', sans-serif

.language__list
  margin: 0
  padding 0
  display flex
  justify-content center
  list-style none
  li
    padding  0 1rem
    box-sizing border-box
  a
    position: relative
    display block
    padding  14px 0 0.5rem 0
    box-sizing border-box
    text-decoration none
    color: currentColor
    text-transform uppercase
    font-weight 700

    @media laptop
      padding  38px 0 0.5rem 0

    &:after
      content: ''
      position: absolute
      left: 0
      bottom: -2px
      width: 100%
      height: 2px
      transition: 0.15s ease-out
      background: #000

  a.activeLang
    &:after
      bottom: -4px
      height: 4px


.logo
  @media max-phone
    display none

.header__row
  padding: 2rem 0 2.5rem 0
  box-sizing border-box

  @media max-phone
    text-align center

  @media phone
    padding: 5rem 0 7.5rem 0
    display flex