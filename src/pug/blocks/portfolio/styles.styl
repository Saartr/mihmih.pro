@import '../_const';

.portfolio
  padding 2rem 0

  .main__number
    display: none

  .title
    margin-bottom: 1rem

  @media tablet
    padding: 3rem 0 1rem 0

.portfolio__img
  object-fit cover
  object-position: center center
  max-width: 100%
  width: 100%
  overflow: hidden

  @media max-tablet
    margin-bottom: 1.5rem



.portfolio__list
  padding 0
  @media tablet
    display flex
    flex-wrap: wrap
    margin: 0 -1rem

  @media laptop
    padding-left: 5rem


.portfolio__item
  position: relative

  &:not(:last-of-type)
    margin-bottom: 1.5rem

  @media tablet
    width 33.33333%
    padding: 1rem
    box-sizing border-box

    &:not(:last-of-type)
      margin-bottom: 0

    &:after
      content: ''
      transition: 0.25s ease-out
      left: 1rem
      top: 1rem

    &:hover
      &:after
        content: ''
        position: absolute
        width: calc(100% - 2rem)
        height: calc(100% - 2rem)
        background: rgba(44, 49, 52, 0.48)

      .portfolio__front
        opacity: 1

      .portfolio__img
        filter: blur(5px)

.portfolio__front
  width 100%
  box-sizing: border-box

  .portfolio__title
    font-size: 21px
    margin: 0 0 0.5rem 0
    color #000

  .portfolio__text
    font-size: 16px
    line-height: 28px
    margin: 0 0 1rem 0
    color dark

  .portfolio__link
    font-weight: bold
    line-height: 28px
    color dark
    
    a
      color: dark
      text-decoration: none

  @media tablet
    padding: 2.5rem
    position absolute
    height: 100%
    width: 100%
    top: 0
    left: 0
    z-index 1
    display: flex
    flex-direction: column
    justify-content: space-between
    z-index: 4
    opacity: 0

    .portfolio__title
      color: #fff
      font-size: 21px
      margin-bottom: 0.75rem

    .portfolio__text
      color: #fff
      font-size: 16px
      margin: 0 0 0.5rem 0

    .portfolio__link
      color: #fff
      font-size: 14px

      a
        color: #fff
        transition: 0.25s ease-out

        &:hover
          background: dark
          color: #fff

.portfolio__back
  width 100%
  min-height: 100px

  @media tablet 
    position absolute
    width: 100%
    hegiht: 100%

.portfolio__note
  color dark
  font-size: 14px

  @media laptop
    padding-left: 5rem


@media laptop
  .portfolio

    .portfolio__header
      display: inline-flex
      position: relative
      margin-bottom: 5rem

      .title
        margin: 0
        padding-left: 5rem

      .main__number
        display: block !important
        position: absolute
        left: 0
        top: 0.5rem
