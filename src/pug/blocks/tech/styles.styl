@import '../_const';

.tech
  padding 2rem 0

.tech__list
  display flex
  flex-wrap: wrap
  list-style none
  padding 0
  margin 0 -0.5rem
  font-size 18px
  font-family: 'GothamPro';

  li
    padding 0.5rem 0.5rem
    box-sizing border-box
    font-weight 700
  
  @media tablet 
    font-size 24px

.tech__filtre
  font-size 21px

.tech__link
  font-weight bold
  display inline-block
  border-bottom 2px solid #DEDEDE
  padding 0.25rem 0
  color currentColor
  text-decoration none