@import '../_const';

.main__number
  display: block
  position: relative
  font-size: 32px
  color: dark
  font-weight: bold

  &:after
    content: ''
    position: absolute
    left: 0
    bottom: -2rem
    width: 100%
    height: 4px
    background: dark

.flex_full
  flex: 1

.hero
  background: linear-gradient(245.33deg, #EBEBEB 0%, #F6F6F6 48.07%, #E3E3E3 100%)
  color: dark

  &__title
    font-size: 32px
    padding: 0
    margin: 0 0 1rem 0

  &__text
    font-size: 16px
    line-height: 28px
    margin: 0 0 2rem 0

  .main__number
    display: none

.counter
  display: none

.hero__block
  box-sizing border-box

.hero__download
  font-family: 'GothamPro';
  text-decoration none
  text-align: center
  margin: 0 auto
  border-bottom  2px solid  currentColor
  display inline-block
  padding 0.25rem 0
  color: currentColor
  transition: 0.25s ease-out

  &:hover
    background: dark
    color: #fff
    border-bottom: 2px solid transparent

.hero__action
  display: inline-flex
  flex-direction: column
  align-items: center
  width: 100%

  .button
    width: 100%
    margin-bottom: 1.5rem
    transition: 0.25s ease-out
    
    &:hover
      background: dark
      color: #fff
      border: 4px solid dark

.hero__image-container
  margin-top: 3rem
  position: relative

  .hero__image
    max-width: 100%
    position: relative
    width: 100%
    z-index: 1

  .hero__oval
    position: absolute
    bottom: 0
    left: 1.5rem
    max-width: 90%
    width: 100%
    z-index: 0

.scroll-block
  display: none

@media tablet
  .hero__block
    width: 60%
    padding-bottom: 200px
    position: relative
    z-index: 2

  .hero__action
    align-items: flex-start

    .button
      width: auto
  
    .hero__download
      text-align: left
      margin-left: 0


  .hero__image-container
    position: absolute
    right: 0
    bottom: 0
    width: 60%

  .scroll-block
    display: flex
    align-items: center
    position: absolute
    right: 20%
    bottom: 2rem
    z-index: 3
    cursor: pointer

    svg
      width: 28px
      height: 45px
      margin-right: 1rem

    &__label
      color: #fff
      font-size: 24px
      font-weight: bold

@media laptop

  .hero
    min-height: 100vh
    display: flex
    flex-direction: column
    &__title
      font-size: 48px
      margin-bottom: 2rem

    &__text
      font-size: 24px
      line-height: 36px
      margin: 0 0 3rem 0

    .main__number
      display: block !important
      position: absolute
      left: 1.5rem
      top: 1rem
      font-size: 32px
      color: dark
      font-weight: bold

      &:after
        content: ''
        position: absolute
        left: 0
        bottom: -2rem
        width: 100%
        height: 4px
        background: dark

  .hero__block
    padding-left: 5rem
    padding-bottom: 0

  .hero__action
    flex-direction: row
    align-items: center

    .button
      margin: 0 2rem 0 0

  .hero__image-container
    position: absolute
    right: 0
    bottom: 0
    width: 588px

  .scroll-block
    right: 18%

  .counter
    display: flex
    flex-direction: column
    position: absolute
    right: 0
    top: 50%
    transform: translate(0, -50%)

    .counter__item
      padding-right: 1.5rem
      position: relative
      color: gray
      margin: 0.5rem 0
      font-size: 24px
      line-height: 28px
      cursor: pointer
      transition: 0.15s ease-out

      &:after
        content: ''
        position: absolute
        right: 0
        top: 0
        height: 100%
        width: 2px
        background: gray
        transition: 0.15s ease-out

      &:hover
        color: dark

        &:after
          width: 4px
          background: dark

      &.active
        font-size: 32px

